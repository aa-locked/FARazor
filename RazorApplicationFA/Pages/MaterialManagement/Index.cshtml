@page
@model RazorApplicationFA.Pages.MaterialManagement.IndexModel


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Material Group List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/MaterialManagement/createGrp" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Group</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Material Group Id</th>
                <th>Short Desc</th>
                <th>Desc</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.tFAMtrlGrps)
            {
                <tr>
                    <td>@obj.FAMtrlGrpId</td>
                    <td>@obj.GrpShortDesc</td>
                    <td>@obj.GrpDesc</td>
                    <td>
                        <a asp-page="/MaterialManagement/edit" asp-route-FAMtrlGrpId="@obj.FAMtrlGrpId" class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-page="/MaterialManagement/delete" asp-route-FAMtrlGrpId="@obj.FAMtrlGrpId" class="btn btn-danger mx-1"> <i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
